<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_confirm_transaction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.scryp.scryp.ConfirmTransactionActivity"
    tools:showIn="@layout/activity_confirm_transaction">

    <TextView
        android:text="@string/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recipient_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="64dp" />

    <TextView
        android:text="@string/item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipient_name"
        android:layout_alignStart="@+id/recipient_name"
        android:layout_marginTop="48dp"
        android:id="@+id/item_ui_label" />

        <!-- Field indented under its label for easy reading :) -->
        <TextView
            android:text="@string/no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_ui_label"
            android:layout_alignStart="@+id/recipient_name"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:id="@+id/item_description" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_price_ui_label"
        android:text="@string/total_price_label"
        android:layout_below="@+id/item_ui_label"
        android:layout_alignStart="@+id/recipient_name"
        android:layout_marginTop="96dp" />

            <!-- Field indented under its label for easy reading :) -->
            <TextView
                android:text="@string/no_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/total_price_ui_label"
                android:layout_alignStart="@+id/recipient_name"
                android:layout_marginTop="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:id="@+id/total_price" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scryp_deal_ui_label"
        android:text="@string/scryp_deal_label"
        android:layout_below="@+id/total_price_ui_label"
        android:layout_alignStart="@+id/recipient_name"
        android:layout_marginTop="96dp" />

        <!-- Field indented under its label for easy reading :) -->
        <TextView
            android:text="@string/no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scryp_deal_ui_label"
            android:layout_alignStart="@+id/recipient_name"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:id="@+id/scryp_deal_description" />


</RelativeLayout>
