<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/content_confirm_transaction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="io.scryp.scryp.ConfirmTransactionActivity"
                tools:showIn="@layout/activity_confirm_transaction"
    >

    <TextView
        android:id="@+id/recipient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="64dp"
        android:text="@string/no_data"
        android:textAppearance="@style/scrypLargeText"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/item_ui_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/recipient_name"
        android:layout_below="@+id/recipient_name"
        android:layout_marginTop="48dp"
        android:text="@string/item_label"
        android:textAppearance="@style/scrypLabelText"
        />

    <TextView
        android:id="@+id/item_description"
        style="@style/scrypLargeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/item_ui_label"
        android:layout_below="@+id/item_ui_label"
        android:text="@string/no_data"
        />

    <TextView
        android:id="@+id/total_price_ui_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/recipient_name"
        android:layout_below="@+id/item_ui_label"
        android:layout_marginTop="96dp"
        android:text="@string/total_price_label"
        />

    <TextView
        android:id="@+id/total_price"
        style="@style/scrypLargeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/recipient_name"
        android:layout_below="@+id/total_price_ui_label"
        android:text="@string/no_data"
        />

    <TextView
        android:id="@+id/scryp_deal_ui_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/recipient_name"
        android:layout_below="@+id/total_price_ui_label"
        android:layout_marginTop="96dp"
        android:text="@string/scryp_deal_label"
        />

    <TextView
        android:id="@+id/scryp_deal_description"
        style="@style/scrypLargeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/recipient_name"
        android:layout_below="@+id/scryp_deal_ui_label"
        android:text="@string/no_data"
        />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/payButton"
        android:layout_alignBottom="@+id/payButton"
        android:layout_alignStart="@+id/scryp_deal_description"
        android:layout_marginStart="11dp"
        android:text="@string/cancel"
        />


    <Button
        android:id="@+id/payButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/cancelButton"
        android:text="@string/pay"
        />


</RelativeLayout>
